
@{
    ViewBag.Title = "Contact";
}

    
<section class="container mt-5">
    <div class="row">
        <div class="col-lg-6">
            <h2 class="text-danger" style="font-weight : bold;">Contact Information</h2>
            <br/>
            <address>
                <strong>BATCH MANAGEMENT SYSTEM PROJECT</strong><br>
                Bhubaneswar, Odisha<br>
                <abbr title="Phone">Phone:</abbr> (+91) 8658754026<br>
                <abbr title="Email">Email:</abbr> <a href="mailto:dash44462@gmail.com">dash44462@gmail.com</a>
            </address>
        </div>
        <div class="col-lg-6">
            <h2 class="text-danger" style="font-weight : bold;">Contact Us</h2>
            <p>We'd love to hear from you. Please fill out the form below to get in touch with us:</p>
            <form method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</section>
@Html.Raw(ViewBag.SuccessMessage)
@Html.Raw(ViewBag.FailureMessage)